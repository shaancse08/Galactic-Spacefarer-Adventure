{
  "xsappname": "Galactic-Spacefarer-Adventure-auth-xs-app",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "$XSAPPNAME.PlanetUser",
      "description": "Planet Users"
    }
  ],
  "attributes": [
    {
      "name": "Planet",
      "description": "Planet",
      "valueType": "string"
    }
  ],
  "role-templates": [
    {
      "name": "PlanetUser",
      "description": "Role Template For Earth People",
      "scope-references": ["$XSAPPNAME.PlanetUser"],
      "attribute-references": ["Planet"]
    }
  ],
  "oauth2-configuration": {
    "token-validity": 3600,
    "redirect-uris": ["https://*/**"]
  }
}

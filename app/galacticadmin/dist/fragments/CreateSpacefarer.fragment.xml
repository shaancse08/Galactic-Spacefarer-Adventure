<core:FragmentDefinition
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="iCreateSpaceFarereDialog"
        title="{i18n>CreateSpacefarer}"
        class="sapUiResponsiveContentPadding"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        contentHeight="80%"
    >
        <content>
            <VBox id="_IDGenVBox1">
                <f:SimpleForm
                    id="SimpleFormDisplay354"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label
                            id="_IDGenLabel1"
                            text="{i18n>Name}"
                        />
                        <Input
                            id="idNameInput"
                            value="{localModel>/createPayload/name}"
                        />
                        <Label
                            id="idEmailLabel"
                            text="{i18n>Email}"
                        />
                        <Input
                            id="idEmailInput"
                            value="{localModel>/createPayload/email}"
                        />
                        <Label
                            id="_IDGenLabel2"
                            text="{i18n>spacefarerNickName}"
                        />
                        <Input
                            id="idNickNameInput"
                            value="{localModel>/createPayload/spacefarerNickName}"
                        />
                        <Label
                            id="_IDGenLabel3"
                            text="{i18n>stardustCollection}"
                        />
                        <Input
                            id="idStarDustCollectionInput"
                            value="{localModel>/createPayload/stardustCollection}"
                            type="Number"
                        />
                        <Label
                            id="_IDGenLabel7"
                            text="{i18n>spacesuitColor}"
                        />
                        <Input
                            id="idSpaceSuiteColorInput"
                            value="{localModel>/createPayload/spacesuitColor}"
                        />

                        <Label
                            id="_IDGenLabel5"
                            text="{i18n>wormholeNavigationSkill}"
                        />
                        <Input
                            id="idwormholeNavigationSkillInput"
                            value="{localModel>/createPayload/wormholeNavigationSkill}"
                            type="Number"
                        />
                        <Label
                            id="_IDGenLabel6"
                            text="{i18n>OriginPlanet}"
                        />
                        <Select
                            id="idOriginPlanet"
                            items="{/Planet}"
                            selectedKey="{localModel>/createPayload/originPlanet_ID}"
                        >
                            <core:ListItem
                                id="idPlanetDetails"
                                key="{ID}"
                                text="{name}"
                            />
                        </Select>
                        <Label
                            id="idDepartment"
                            text="{i18n>Department}"
                        />
                        <Select
                            id="idDepartmentList"
                            items="{/Department}"
                            selectedKey="{localModel>/createPayload/department_ID}"
                            showSecondaryValues="true"
                        >
                            <core:ListItem
                                id="idDepartmentDetails"
                                key="{ID}"
                                text="{name}"
                                additionalText="{description}"
                            />
                        </Select>
                        <Label
                            id="idPosition"
                            text="{i18n>Position}"
                        />
                        <Select
                            id="idPositionList"
                            items="{/Position}"
                            selectedKey="{localModel>/createPayload/position_ID}"
                        >
                            <core:ListItem
                                id="idPositionItem"
                                key="{ID}"
                                text="{currentPosition}"
                            />
                        </Select>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                id="idSaveButton"
                text="{i18n>Ok}"
                press="onSubmitData"
                type="Accept"
            />
        </beginButton>
        <endButton>
            <Button
                id="idPostAlertCancelBtn"
                text="{i18n>Cancel}"
                press="onDialogClose"
                type="Reject"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

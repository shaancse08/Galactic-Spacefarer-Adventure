<mvc:View
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
    controllerName="com.app.galacticadmin.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    height="100%"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <uxap:ObjectPageLayout
        id="Details"
        enableLazyLoading="true"
    >
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle id="idObjectPageHeaerTitle">
                <uxap:expandedHeading>
                    <Title
                        id="idTitle"
                        text="{name}"
                    />
                </uxap:expandedHeading>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
            <FlexBox
                id="idSnapHeading"
                fitContainer="true"
                alignItems="Center"
            >
                <Avatar
                    id="idProfileImage"
                    src="{imageUrl}"
                />
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection
                id="idGeneralInformationSection"
                titleUppercase="true"
                title="{i18n>GeneralInformation}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idGeneralInformationSubSection"
                    >
                        <uxap:blocks>
                            <core:Fragment
                                type="XML"
                                fragmentName="com.app.galacticadmin.fragments.GeneralInformation"
                            />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="iddepartmentSection"
                titleUppercase="true"
                title="{i18n>Department}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="idDepartmentSubsection">
                        <uxap:blocks>
                            <core:Fragment
                                type="XML"
                                fragmentName="com.app.galacticadmin.fragments.Department"
                            />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="idPositionSection"
                titleUppercase="true"
                title="{i18n>Position}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="idPositionSubsection">
                        <core:Fragment
                            type="XML"
                            fragmentName="com.app.galacticadmin.fragments.Position"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>

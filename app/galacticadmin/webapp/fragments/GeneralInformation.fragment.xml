<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <VBox
        id="_IDGenVBox1"
        class="sapUiSmallMargin"
    >
        <f:SimpleForm
            id="idGeneralInformationForm"
            editable="false"
            layout="ColumnLayout"
            columnsM="2"
            columnsL="3"
            columnsXL="4"
        >
            <f:content>
                <Label
                    id="_IDGenLabel1"
                    text="{i18n>Name}"
                />
                <Text
                    id="_IDGenText1"
                    text="{name}"
                />
                <Label
                    id="idEmailLabel"
                    text="{i18n>Email}"
                />
                <Link
                    id="idEmailText"
                    text="{email}"
                    href="mailto:{email}"
                />
                <Label
                    id="_IDGenLabel2"
                    text="{i18n>spacefarerNickName}"
                />
                <Text
                    id="_IDGenText2"
                    text="{spacefarerNickName}"
                />
                <Label
                    id="_IDGenLabel3"
                    text="{i18n>stardustCollection}"
                />
                <Text
                    id="_IDGenText3"
                    text="{stardustCollection}"
                />
                <Label
                    id="_IDGenLabel7"
                    text="{i18n>spacesuitColor}"
                />
                <Text
                    id="_IDGenText7"
                    text="{spacesuitColor}"
                />

                <Label
                    id="_IDGenLabel4"
                    text="{i18n>stardustCollectionStatus}"
                />
                <Text
                    id="_IDGenText4"
                    text="{stardustCollectionStatus}"
                />
                <Label
                    id="_IDGenLabel5"
                    text="{i18n>wormholeNavigationSkill}"
                />
                <Text
                    id="_IDGenText5"
                    text="{wormholeNavigationSkill}"
                />
                <Label
                    id="_IDGenLabel6"
                    text="{i18n>OriginPlanet}"
                />
                <Text
                    id="_IDGenText6"
                    text="{originPlanet/name}"
                />
            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>
